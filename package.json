{
  "name": "duxwind",
  "version": "0.1.2",
  "description": "Real-time Tailwind-like CSS generator with pipe notation, shortcuts, and dynamic CSS injection",
  "type": "module",
  "main": "dist/duxwind.js",
  "exports": {
    ".": {
      "import": "./dist/duxwind.js",
      "require": "./dist/duxwind.cjs"
    },
    "./core": "./dist/core.js",
    "./config": "./dist/config.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "ai-bridge": "./bin/ai-bridge.js"
  },
  "files": [
    "dist/",
    "src/",
    "bin/",
    "example/",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist/ && bun build src/duxwind.js --outfile dist/duxwind.js --format esm && bun build src/duxwind.js --outfile dist/duxwind.cjs --format cjs",
    "test": "bun test src/",
    "start": "bun bin/server.js",
    "dev": "bun run bin/server.js & bun build src/duxwind.js --outdir dist --format cjs --outfile dist/duxwind.cjs --watch",
    "pages": "open https://dux.github.io/duxwind/",
    "ai-bridge": "bun run bin/ai-bridge.js"
  },
  "keywords": [
    "css",
    "tailwind",
    "utility-first",
    "css-in-js",
    "responsive",
    "frontend",
    "bun"
  ],
  "author": "Dux",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dux/duxwind.git"
  },
  "homepage": "https://dux.github.io/duxwind/",
  "bugs": {
    "url": "https://github.com/dux/duxwind/issues"
  },
  "devDependencies": {
    "jsdom": "^22.1.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "puppeteer": "^24.30.0"
  }
}
